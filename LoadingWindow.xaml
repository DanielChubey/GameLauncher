<Window x:Class="GameLauncher.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading Window" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- ProgressBar -->
        <ProgressBar x:Name="ProgressBar" Height="30" Width="300" VerticalAlignment="Center" HorizontalAlignment="Center" 
                     Minimum="0" Maximum="100" Value="0" 
                     Foreground="Green" 
                     Background="LightGray"
                     BorderBrush="DarkGray" BorderThickness="2"/>

        <!-- Status Text Below ProgressBar -->
        <TextBlock x:Name="StatusText" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,20,0,20" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>
