<Window x:Class="GameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Window" Height="450" Width="800"
        Background="#1A1A1A">

    <Grid>
      
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/> 
            <ColumnDefinition Width="*"/>  
        </Grid.ColumnDefinitions>

        
        <Grid x:Name="Sidebar" Background="#1A1A1A" VerticalAlignment="Stretch" Grid.Column="0">
            <StackPanel>
               
                <Button Content="Home"
                        Width="200" Height="50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="18"
                        Foreground="White"
                        Background="#9B59B6"
                        Margin="0,20,0,10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="#9B59B6" BorderBrush="#8E44AD"
                                    BorderThickness="2" CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#8E44AD"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#7D3C98"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

               
                <Button Content="Settings"
                        Width="200" Height="50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="18"
                        Foreground="White"
                        Background="#9B59B6"
                        Margin="0,10,0,10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="#9B59B6" BorderBrush="#8E44AD"
                                    BorderThickness="2" CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#8E44AD"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#7D3C98"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

               
                <Button Content="Add Game"
                        Width="200" Height="50"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="18"
                        Foreground="White"
                        Background="#9B59B6"
                        Margin="0,10,0,20"
                        Click="AddGame_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="#9B59B6" BorderBrush="#8E44AD"
                                    BorderThickness="2" CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#8E44AD"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#7D3C98"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

      
        <Grid Grid.Column="1">
            <!-- Title -->
            <TextBlock Text="Welcome to the Game Launcher!"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="24"
                       Foreground="White"
                       Margin="0,20,0,0"/>

           
            <Button x:Name="PlayButton"
                    Content="Play"
                    Width="150" Height="50"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,30,30"
                    FontSize="18"
                    Foreground="White"
                    IsEnabled="False"
                    Click="PlayButton_Click">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="#9B59B6" BorderBrush="#8E44AD"
                                BorderThickness="2" CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#8E44AD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#7D3C98"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

    </Grid>
</Window>
